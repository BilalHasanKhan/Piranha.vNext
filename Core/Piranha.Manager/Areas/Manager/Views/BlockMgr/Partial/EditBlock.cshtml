@{
	Layout = "";
}

<div class="row">
	<div class="col-sm-12">
		<div class="panel panel-primary panel-add" >
			<div class="notification">
				<div class="icon"><span class="glyphicon glyphicon-ok-circle"></span></div>
			</div>
			<div id="addBlockTitle" class="panel-heading">
				<h3 class="panel-title">
					<span class="glyphicon glyphicon-plus pull-right"></span>
					<a data-toggle="collapse" href="#addBlock" aria-expanded="false" aria-controls="addBlock" data-bind="text: title">
						@Piranha.Manager.Resources.Block.AddTitle
					</a>
				</h3>
			</div>
			<div id="addBlock" class="panel-collapse collapse" role="tabpanel" aria-labelledby="addBlockTitle">
				<div class="panel-body">
					<form role="form" class="form">
						<div class="row">
							<div class="col-sm-6">
								<div class="form-group" data-bind="css: { 'has-error has-feedback': nameValid() != true }">
									<input type="text" class="form-control" placeholder="@Piranha.Manager.Resources.Block.NamePlaceholder" data-bind="value: name" />
									<!-- ko if: !nameValid() -->
									<span class="glyphicon glyphicon-remove form-control-feedback"></span>
									<!-- /ko -->
								</div>
							</div>
							<div class="col-sm-6">
								<div class="form-group">
									<input type="text" class="form-control" placeholder="@Piranha.Manager.Resources.Block.SlugPlaceholder" data-bind="value: slug" />
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="form-group" data-bind="css: { 'has-error has-feedback': descriptionValid() != true }">
									<textarea name="Email" class="form-control meta" placeholder="@Piranha.Manager.Resources.Block.DescriptionPlaceholder" data-bind="value: description"></textarea>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="form-group">
									<textarea class="form-control editor" data-bind="text: body"></textarea>
								</div>
							</div>
						</div>
					</form>
				</div>
				<div class="panel-footer">
					<!-- Save -->
					<div class="btn-group">
						<button type="button" class="btn btn-labeled btn-success" data-bind="click: save">
							<span class="btn-label">
								<i class="glyphicon glyphicon-ok"></i>
							</span>
							@Piranha.Manager.Resources.Global.Save
						</button>
					</div>
					<!-- Cancel -->
					<div class="btn-group">
						<button type="button" class="btn btn-labeled btn-danger" data-bind="click: clear">
							<span class="btn-label">
								<i class="glyphicon glyphicon-remove"></i>
							</span>
							@Piranha.Manager.Resources.Global.Cancel
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
