<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<title>@ViewBag.Title</title>

	<link href="~/manager/assets.ashx/img/icon.ico" rel="icon" type="image/x-icon">
	<link href="~/manager/assets.ashx/img/icon.ico" rel="shortcut icon" type="image/x-icon">
	<link href="~/manager/assets.ashx/css/style.min.css" rel="stylesheet" type="text/css" />

	@if (!String.IsNullOrEmpty(ViewBag.Message)) {
		<script type="text/javascript">
			setTimeout(function () {
				$(".sys-message").slideUp();
			}, 2000);
		</script>
	}
	@RenderSection("head", required: false)
</head>
<body @(ViewBag.IsSaved == true ? "class=pre-saved" : "")>
	<nav class="navmenu navmenu-inverse navmenu-fixed-left" role="navigation">
		<a class="navmenu-brand" href="#">
			<img src="@Url.Content("~/manager/assets.ashx/img/logo.png")" />
		</a>
		@Html.Partial("Partial/Menu")
	</nav>

	<div class="title">
		<div class="container-fluid">
			<h1>@ViewBag.Title</h1>
			@if (!String.IsNullOrWhiteSpace(ViewBag.SubTitle)) {
				<p class="subtitle">@ViewBag.SubTitle</p>
			}
		</div>
	</div>
	<div class="body">
		@RenderBody()
	</div>

	<div class="notification">
		<div class="icon"><span class="glyphicon glyphicon-ok-circle"></span></div>
	</div>

	<script type="text/javascript">
		var baseUrl = '@Url.Content("~/")';
	</script>
	<script type="text/javascript" src="~/manager/assets.ashx/js/scripts.min.js"></script>
	@RenderSection("script", required: false)
</body>
</html>
